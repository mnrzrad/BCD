Package: BCD
Type: Package
Title: Bivariate Distributions via Conditional Specification
Version: 0.1.1
Authors@R: c(
    person("Mina", "Norouzirad", email = "mina.norouzirad@gmail.com", role = c("aut", "cre"), comment = c(ORCID = "0000-0003-0311-6888")),
